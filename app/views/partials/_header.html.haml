.header_upper_nav
  %div.logo-container
    %a.logo{:href => local_assigns[:header_link] || root_path}
      %span Sports Hub
  .header-auth-container
    .auth_icons
      - if current_user&.admin?
        %a{href: current_page?(root_path) ? admin_home_path : root_path, style: 'text-decoration: none;'}
          #{File.read('app/assets/images/svgs/admin_swap.svg').html_safe}
      - if current_user&.active?
        %span
          = t('user_header.logged_in_as')
          %span= current_user.user_name
        #{link_to t('user_header.sign_out'), sign_out_path, {class: 'btn-link'}}
      - else
        = link_to t('user_header.sign_in'), sign_in_path, {class: 'btn-link'}
        = link_to t('user_header.sign_up'), sign_up_path, {class: 'btn-secondary'}