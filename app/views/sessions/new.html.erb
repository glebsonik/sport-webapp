<h1>Sign in to your account</h1>
<%= form_with do |form| %>
  <% if flash.alert %>
    <div id="error_explanation">
      <span><%= flash.alert %></span>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_name %>
    <%= form.text_field :user_name %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Sign in"%>
  </div>
<% end %>
