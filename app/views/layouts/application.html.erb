<!DOCTYPE html>
<html>
  <head>
    <title>SportWebapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div class="header_upper_nav">
      <div>
        <a class="logo" href="<%=root_path%>">
          <span>Porn</span> Sport
          <span>Hub</span>
        </a>
      </div>
      <div class="auth_icons">
        <% if current_user %>
          Logged in as <%= current_user.user_name %>
          <%= link_to "Sign out", sign_out_path, {class: 'btn-simple'} %>
        <% else %>
          <%= link_to "Sign in", sign_in_path, {class: 'btn-simple'}%>
          <span style="
          ">
          <%= link_to "Sign up", sign_up_path, {class: 'btn-outlined'}%>
        </span>
        <% end %>
      </div>
    </div>
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>

  </header>
  <body>
    <%= yield %>
  </body>
</html>
